{
  
  "compilerOptions": {
    "noUnusedLocals": false,
    "allowArbitraryExtensions": true,
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "module": "commonjs",
    "target": "ES6",
    "baseUrl": "./",
    "paths": {
      "@src/*": ["src/*"],
      "@utils/*": ["src/utils/*"],
      "@events/*": ["src/events/*"],
      "@handler/*": ["src/handler/*"],
      "@test/*": ["test/*"],
      "@helper/*": ["src/utils/types/*"]
    }
  },
  "exclude": ["node_modules", "**/node_modules/*"]
}
